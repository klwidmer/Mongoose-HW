<h1>sup</h1>

<button onclick="Scrape()">Scrape Articles</button>


{{#each articles}}
<p>{{this.title}}</p>
<img src="{{this.imageURL}}" alt="">
<hr>
{{/each}}

<script> 
    
function Scrape(){ 
        $.ajax({
            url: '/scrape',
            type: 'GET',
            success: function(data){
                if(data.success == true){ // if true (1)
                    setTimeout(function(){// wait for 5 secs(2)
                    location.reload(); // then reload the page.(3)
            }, 2000); 
        }
    }
    })
}
</script>
